<header
  class="flex justify-between items-center p-4 bg-white border-b border-neutral-200"
>
  <div class="flex items-center space-x-2">
    <img src="/favicon.ico" alt="File Uploader Icon" class="h-8 w-8" />
    <h1 class="text-xl font-semibold">File Uploader</h1>
  </div>
  <a
    href="/signup"
    class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
    >Sign Up</a
  >
</header>

<!-- TODO: Add breadcrumbs -->
<main class="p-6 bg-white">
  <nav class="mb-4 flex justify-between items-center text-base text-gray-600">
    <div class="flex items-center space-x-2">
      <% breadcrumbs.forEach((b, index) => { %> <% if (index > 0) { %>
      /&ThickSpace; <% } %>
      <a href="/share/<%= b.id %>" class="hover:underline"><%= b.name %></a>
      <% }) %>
    </div>
    <div class="flex items-center space-x-2">
      <button class="px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 rounded">
        Name
      </button>
      <button class="px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 rounded">
        Type
      </button>
      <button class="px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 rounded">
        Modified
      </button>
    </div>
  </nav>

  <h2 class="text-lg font-semibold mb-4">Folders</h2>
  <ul class="grid grid-cols-5 gap-4 mb-8">
    <% if (folders && folders.length > 0) { %> <% folders.forEach(folder => { %>
    <li class="border border-neutral-200 rounded p-4">
      <a
        href="/share/<%= folder.id %>"
        class="text-neutral-800 hover:underline font-medium"
        ><%= folder.name %></a
      >
    </li>
    <% }) %> <% } else { %>
    <li class="text-gray-500">No subfolders available.</li>
    <% } %>
  </ul>

  <h2 class="text-lg font-semibold mb-4">Files</h2>
  <ul class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-8">
    <% if (files && files.length > 0) { %> <% files.forEach(file => { %>
    <li class="border border-neutral-200 rounded p-4">
      <p class="text-neutral-800 hover:underline font-medium break-words">
        <%= file.name %>
      </p>
      <p class="text-sm text-gray-600">Size: <%= file.size %></p>
      <p class="text-sm text-gray-600">Updated: <%= file.updatedAt %></p>
    </li>
    <% }) %> <% } else { %>
    <p class="text-gray-500">No files available.</p>
    <% } %>
  </ul>
</main>
