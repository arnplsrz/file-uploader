<% if (locals.user) { %>
  <body class="flex flex-1 bg-neutral-50 dark:bg-neutral-900">
    <%- include('../partials/aside') %>
    <%- include("../partials/error", { message: message }) %>

    <main class="p-2 flex flex-1 items-center justify-center m-0 sm:m-4 sm:rounded-lg bg-white dark:bg-neutral-950 text-neutral-950 dark:text-neutral-50 space-y-4 shadow-sm">
      <section class="w-auto sm:w-md sm:h-auto bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded p-4">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">File Details</h2>
        <article class="mb-4">
          <p class="text-neutral-700 dark:text-neutral-400 break-all"><strong class="text-neutral-950 dark:text-neutral-100">Name:</strong> <%= file.name %></p>
          <p class="text-neutral-700 dark:text-neutral-400"><strong class="text-neutral-950 dark:text-neutral-100">Size:</strong> <%= file.size %><p>
          <p class="text-neutral-700 dark:text-neutral-400"><strong class="text-neutral-950 dark:text-neutral-100">Upload Time:</strong> <%= file.createdAt %></p>
        </article>
        <a href="/file/<%= file.id %>/download" class="w-fit flex gap-2 px-5 py-2.5 bg-primary-0 text-black no-underline rounded transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor">
            <path d="M480-320 280-520l56-58 104 104v-326h80v326l104-104 56 58-200 200ZM240-160q-33 0-56.5-23.5T160-240v-120h80v120h480v-120h80v120q0 33-23.5 56.5T720-160H240Z"/>
          </svg>
          Download File
        </a>
      </section>
    </main>
  </body>
<% } %>
