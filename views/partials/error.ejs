<% if (message && Object.keys(message).length > 0) { %>
<div
  x-data
  class="bg-white border border-gray-200 flex gap-4 shadow-lg rounded-lg absolute bottom-0 right-0 mb-4 mr-4 p-4"
>
  <% if (message.success) { %>
  <div class="text-green-600"><%= message.success[0] %></div>
  <% } %> <% if (message.error) { %>
  <div class="text-red-600"><%= message.error[0] %></div>
  <% } %> <% if (message.info) { %>
  <div class="text-black"><%= message.info[0] %></div>
  <% } %>
  <button
    @click="$el.parentElement.remove()"
    class="text-gray-500 hover:text-gray-700"
  >
    &times;
  </button>
</div>
<% } %>
